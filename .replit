entrypoint = "index.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["sh", "-c", "npm start"]
deploymentTarget = "autoscale"
ignorePorts = false
build = ["sh", "-c", "npm run build"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 9088213
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx server/index.ts"

[[ports]]
localPort = 5000
externalPort = 80
