{
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": [
    "**/__tests__/**/*.ts",
    "**/?(*.)+(spec|test).ts"
  ],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "tsconfig": "tsconfig.test.json"
    }]
  },
  "collectCoverageFrom": [
    "server/**/*.ts",
    "!server/**/*.d.ts",
    "!**/node_modules/**"
  ],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "testTimeout": 10000,
  "moduleNameMapper": {
    "^@shared/(.*)$": "<rootDir>/shared/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"]
}