{
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": [
    "**/__tests__/**/*.ts",
    "**/?(*.)+(spec|test).ts"
  ],
  "transform": {
    "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/dist/index.js"
  },
  "collectCoverageFrom": [
    "server/**/*.ts",
    "!server/**/*.d.ts",
    "!**/node_modules/**"
  ],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "testTimeout": 10000,
  "moduleNameMapper": {
    "^@shared/(.*)$": "<rootDir>/shared/$1"
  }
}